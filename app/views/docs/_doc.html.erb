<h2><%= link_to doc.title, doc%></h2>
<div class="ui avatar image">
  <% if doc.user %>
    <%= image_tag doc.user.avatar %>
  <% end %>
</div>
<div class="small faded">
  <%= t('updated at') + " " + l(doc.updated_at, format: :short) %>
</div>
<p>
  <%= doc.description%>
</p>


<% doc.tag_list.each do |t| %>
  <%= link_to docs_path(tag: t) do %>
    <div class="small-tag">
      <%= t %>
    </div>
  <% end %>
<% end %>

<hr>
