<div class="ui vertical inverted sidebar menu left uncover visible">
    <div class="item">
      <span class="header">
        <h3>Team Tracker</h3>
      </span>
    </div>
    <% if current_user %>
      <div class="item">
        <div class="ui avatar left floated image">
          <%= image_tag current_user.avatar %>
        </div>
          <%= current_user.name %>
          <div class="meta">
            <%= link_to logout_path do %>
              <i class="sign out icon"></i>
              Sign out
            <% end %>
          </div>
      </div>
    <% else %>
      <%= link_to '/auth/github', class: 'item' do %>
        <i class="sign in icon"></i>
        Sign in
      <% end %>
    <% end %>
    <a href="#" class="item">
      <i class="feed icon"></i>
      Feed
    </a>
    <a href="#" class="item">
      <i class="book icon"></i>
      Twydies
    </a>
    <a href="#" class="item">
      <i class="area chart icon"></i>
      Statistics
    </a>
    <a href="#" class="item">
      <i class="configure icon"></i>
      Settings
    </a>
</div>
